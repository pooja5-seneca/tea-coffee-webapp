<div class="container">
    <h4 class="display-4 mt-5">Related Products</h4>

    <div class="row">
        {{#if relatedProd}}
            {{#each relatedProd}}
            <div class="col-6 col-lg-3 mb-3">
                {{>productListingItem product=this}}
            </div>
            {{/each}}
        {{else}}
            <div class="col-12 mb-3">
                No Related Products Found
            </div>
        {{/if}}
    </div>
</div>