<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Tea &amp; Coffee Online</title>
		{{!-- all meta tags and common link tags --}}
		{{>headMetaTags}}
	</head>
	<body>
		{{!-- header --}}
		{{>header}}

		{{!-- div between header and footer--}}
        <div id="mid-wrap">
            {{!-- all your content goes here --}}
            <div class="container-lg my-5">
                <div class="">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/register">Register</a>
                        </li>
                    </ul>
                </div>
                <div>
                    <div class=" border border-success rounded-3">
                        <div class="p-5">
                            <div class="text-center">
                                <h2> Registration Form </h2>
                                <br/>
                            </div>
                            <form method="post" action="/register">
                                <label for="first name" class="form-label">First Name</label>
                                <input type="text" class="form-control" name="firstName" id="firstName" placeholder="i.e. John" />
                                <label for="last name" class="form-label">Last Name</label>
                                <input type="text" class="form-control" name="lastName" id="lastName" placeholder="i.e. Smith" />
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email Address" />
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Your password" />
                                {{!-- <label for="password" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" name="password" id="password" placeholder="Confirm Your password" /> --}}
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" name="address" id="address" placeholder="Your Address" />
                                <label for="phone_number" class="form-label">Phone Number</label>
                                <input type="text" class="form-control" name="phone_number" id="phone_number" placeholder="Your phone_number" />
                                <div class="mb-4 text-center p-5">
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		{{!-- footer --}}
		{{>footer}}

		{{!-- scripts --}}
		{{>footerScripts}}
	</body>
</html>
